<!--   include header  -->
<%- include("parts/header", {title: 'Login' }) %>

  <!--   container -->
  <div class="container">
    <div class="contents">
      <!--  Login -->
      <div class="form-login">
        <div class="row">

          <div class="col-lg-12 ">
            <!--   Title  -->
            <h1 class="text-center">Bem-vindo(a)</h1>
            <p class="text-center lead">Faça login ou registre-se.</p>

            <!--   Messagens erro/sucesso  -->
            <%- include("parts/messages"); %>
              <!--   Registro -->
              <div class="row">
                <div class="col-lg my-5 ml-3" id="column-resgister">
                  <h4 class="text-center">Registre-se:</h4>
                  <!--   Form registro -->
                  <form id="form-register" action="/login/register" method="POST">

                    <div class="input-wrapper">
                      <label for="name">Nome:</label>
                      <input type="text" id="name" name="name" />
                    </div>

                    <div class="input-wrapper">
                      <label for="email">Email:</label>
                      <input type="text" id="email" name="email" />
                    </div>

                    <div class="input-wrapper">
                      <label for="password">Senha:</label>
                      <input type="password" id="password" name="password" />
                    </div>

                  </form>
                  <!--   Botão form registro -->
                  <div class="btn-login">
                    <button form="form-register" type="submit" class="btn btn-primary btn-lg">Registre-se</button>
                  </div>
                </div>

                <!--   Seção login  -->
                <div class="col-lg my-5">
                  <h4 class="text-center">Faça o login:</h4>

                  <!--   Form login  -->
                  <form id="form-login" action="/login/auth" method="POST">

                    <div class="input-wrapper">
                      <label for="email">Email:</label>
                      <input type="text" id="email" name="email" />
                    </div>

                    <div class="input-wrapper">
                      <label for="password">Senha:</label>
                      <input type="password" id="password" name="password" />
                    </div>

                  </form>
                  <!--   Botão form login  -->
                  <div class="btn-login">
                    <button form="form-login" type="submit" class="btn btn-primary btn-lg">Login</button>
                  </div>
                </div>
              </div>
          </div>


        </div>



      </div>
    </div>

  </div>

  <!--   Include footer  -->
  <%- include("parts/footer") %>